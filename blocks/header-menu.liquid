<style>
  #shopify-block-{{ block.id }}{
    width:{{ block.settings.width }}%;
    padding:{{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }
  #shopify-block-{{ block.id }} ul{
    display:{{ block.settings.display }};
    flex-direction:{{ block.settings.flex-direction }};
    justify-content:{{ block.settings.justify-content }};
    align-items:{{ block.settings.align-items }};
    gap:{{ block.settings.gap }}px;
    padding:0;
    list-style:none;
    margin:0;
  }
  #shopify-block-{{ block.id }} li a{
    font-family:"{{ block.settings.list-font-style.family }}",sans-serif;
    font-size:{{ block.settings.list-font_size }}px;
    font-weight:{{ block.settings.list-font_weight }};
    line-height:{{ block.settings.list-line-height }}px;
    color:{{ block.settings.list-color }};
    text-decoration:{{ block.settings.text-decoration }};
  }
  @media (max-width:576px){
    #shopify-block-{{ block.id }}{
      width:{{ block.settings.mobile-width }};
  }
</style>
<ul>
  {% for link in block.settings.menu.links %}
    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
  {% endfor %}
</ul>
