<style>
  #shopify-block-{{ block.id }}{
    {% if block.settings.button-width-max-content == true %}
      width:max-content;
    {% else %}
      width:{{ block.settings.width }}%;
    {% endif %}
  }
  #shopify-block-{{ block.id }} a{
    font-family:"{{ block.settings.font-style.family }}",sans-serif;
    font-size:{{ block.settings.font_size }}px;
    font-weight:{{ block.settings.font_weight }};
    line-height:{{ block.settings.line-height }}px;
    background:{{ block.settings.bg_color }};
    color:{{ block.settings.color }};
    border-radius:{{ block.settings.border_radius }}px;
    padding:{{ block.settings.padding_top_bottom }}px {{ block.settings.padding_left_right }}px;
    margin:{{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom}}px;
    text-decoration:{{ block.settings.text-decoration }};
    display: inline-block;
    border-style: solid;
    border-width:{{ block.settings.border_width }}px;
    border-color:{{ block.settings.border-color }};
    text-align:{{ block.settings.text-align }};
    width:100%;
  }
  #shopify-block-{{ block.id }} a:hover{
    background:{{ block.settings.hover_bg_color }};
    color:{{ block.settings.hover_color }};
  }
  @media (max-width:576px){
    #shopify-block-{{ block.id }}{
      {% if block.settings.mobile-button-width-max-content == true %}
        width:max-content;
      {% else %}
        width:{{ block.settings.mobile-width }}%;
      {% endif %}
    }
</style>
<a href="{{ block.settings.button_url }}" class="button-style">
  {{ block.settings.button_title }}
</a>
{% schema %}
  {
    "name": "Button",
    "class":"button-item",
    "settings": [
      {
        "type": "text",
        "id": "button_title",
        "label": "Button Title",
        "default":"Button Label"
      },
      {
        "type": "font_picker",
        "id": "font-style",
        "label": "Font Style",
        "default": "montserrat_n5"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"
      },
