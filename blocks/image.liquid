<style>
  .image-item img,.image-item svg{
    width:100%;
    height:100%;
  }
  
</style>
{% if block.settings.image != blank %}
  <img src="{{ block.settings.image | image_url }}">
{% else %}
  {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
{% endif %}
{% schema %}
  {
    "name": "Image",
    "class": "image-item",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [{"type": "@theme"},{"type": "@app"}],
    "presets": [
      {
        "name": "Image"
      }
    ]
  }
{% endschema %}