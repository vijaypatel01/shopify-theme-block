<div class="custom-section">
    {% content_for 'blocks' %}
</div>
{% schema %}
  {
    "name": "Custom Section",
    "settings": [],
    "blocks": [{"type": "container"}],
    "presets": [
      {
        "name": "Custom Section",
        "blocks": [
          {
            "type": "container",
            "blocks": [
              {
                "type": "group",
                "settings": {
                  "display":"flex"
                },
                "blocks": [
                  {
                    "type": "image-block",
                    "settings": {
                      "width":"50%"
                    },
                    "blocks": [
                      {
                        "type": "image"
                      }
                    ]
                  },
                  {
                    "type": "text-block",
                    "settings": {
                      "width":"50%",
                      "padding_top":20,
                      "padding_right":20,
                      "padding_bottom":20,
                      "padding_left":20
                    },
                    "blocks": [
                      {
                        "type": "heading",
                        "settings": {
                          "margin_bottom":10
                        }
                      },
                      {
                        "type": "description",
                        "settings": {
                          "margin_bottom":10
                        }
                      },
                      {
                        "type": "button"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
{% endschema %}